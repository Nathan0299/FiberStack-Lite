                    "format": "table",
                    "rawQuery": true,
                    "rawSql": "SELECT m.node_id, LOWER(n.country) || '-' || LOWER(n.region) as region, ROUND(AVG(m.latency_ms)::numeric, 1) as avg_latency, ROUND(AVG(m.packet_loss)::numeric, 2) as avg_loss, ROUND((AVG(m.latency_ms)/50.0 + AVG(m.packet_loss)*10.0 + (100.0-AVG(m.uptime_pct))*2.0)::numeric, 2) as score FROM metrics m JOIN nodes n ON m.node_id = n.node_id WHERE m.time > NOW() - INTERVAL '1 hour' AND ('$region' = 'All' OR LOWER(n.country) || '-' || LOWER(REPLACE(n.region, ' ', '-')) = '$region') GROUP BY m.node_id, n.country, n.region ORDER BY score DESC LIMIT 5",
